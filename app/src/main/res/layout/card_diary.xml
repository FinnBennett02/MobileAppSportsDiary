<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginHorizontal="12dp"
    android:elevation="8dp"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Image on the right -->
        <ImageView
            android:id="@+id/imageIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/change_diary_image"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@mipmap/ic_launcher" />

        <!-- Title -->
        <TextView
            android:id="@+id/placemarkTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/imageIcon"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            tools:text="Match vs Rivals" />

        <!-- Description -->
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/placemarkTitle"
            android:layout_alignStart="@id/placemarkTitle"
            android:layout_toStartOf="@id/imageIcon"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark"
            tools:text="Tough match, great atmosphere." />

        <!-- Goals -->
        <TextView
            android:id="@+id/goals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:layout_alignStart="@id/placemarkTitle"
            android:layout_toStartOf="@id/imageIcon"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textColor="@color/colorPrimaryDark"
            tools:text="Goals: 2" />

        <!-- Assists -->
        <TextView
            android:id="@+id/assists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/goals"
            android:layout_alignStart="@id/placemarkTitle"
            android:layout_toStartOf="@id/imageIcon"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@color/colorPrimaryDark"
            tools:text="Assists: 1" />

        <!-- Rating -->
        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/assists"
            android:layout_alignStart="@id/placemarkTitle"
            android:layout_toStartOf="@id/imageIcon"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@color/colorPrimaryDark"
            tools:text="Rating: 8/10" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
